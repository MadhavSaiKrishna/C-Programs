#include <stdio.h>
int Digits(int);
int Digits(int a)
{
 int total=0;
 while (a>0)
 {
  total = total + a%10;
  a = a/10;
 }
 return total;
}
void main()
{
 int a;
 int sum=0;
 while(1)
 {
  printf("Enter a number:");
  scanf("%d",&a);
  if(a==0)
   break;
  else
   sum = sum + Digits(a);
 }
 printf("The sum is %d",sum);  
}
